{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist/",
    "baseUrl": "./",
    "strictNullChecks": true,
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "paths": {
      "@message-schemas/*": ["./submodules/message-schemas/*"]
    }
  },
  "include": [
    "src/",
    "submodules/message-schemas/"
  ]
}
